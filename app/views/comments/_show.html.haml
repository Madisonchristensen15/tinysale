%h5= comment.title
- if comment.user.present?
  = image_for(comment.user, "25x25")
  = comment.user.username
- else
  = gravatar_for(comment.lead.email, "25x25")
  = comment.lead.username if comment.lead.username.present?
.star
  - if comment.rating.present?
    = image_tag "stars#{comment.rating}.png"
= comment.body